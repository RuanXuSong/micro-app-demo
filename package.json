{
  "name": "platform-frontend",
  "version": "0.0.1",
  "description": "雷数低代码开发平台",
  "private": false,
  "main": "lib/index.min.js",
  "module": "lib/index.esm.js",
  "types": "lib/index.d.ts",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "bootstrap": "yarn && npm-run-all --serial install:*",
    "start": "npm run main-react",
    "build:watch": "cross-env NODE_ENV='development' rollup -c -w",
    "build": "cross-env NODE_ENV='production' rollup -c && npm run createtype && npm run afterbuild && npm run install:main-react && npm run build:main-react",
    "install:main-react": "cd main_apps/main-react && yarn",
    "build:main-react": "cd main_apps/main-react && yarn build",
    "main-react": "cd main_apps/main-react && yarn start",
    "docs": "docsify serve docs --port 2000",
    "lint": "prettier --check main_apps/**/*.ts main_apps/**/*.tsx",
    "lint:fix": "prettier --check main_apps/**/*.ts main_apps/main-react/src/utils/*.js main_apps/**/*.tsx --write",
    "createtype": "node scripts/create_type.js",
    "afterbuild": "node scripts/after_build.js",
    "test:server": "node scripts/test_server.js --start",
    "prepublishOnly": "yarn lint && yarn test && yarn build",
    "commit": "git-cz"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/micro-zoe/micro-app.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "webcomponents",
    "micro-frontend",
    "microapp"
  ],
  "files": [
    "es",
    "lib",
    "polyfill",
    "plugins",
    "typings"
  ],
  "author": "cangdu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/micro-zoe/micro-app/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:fix && lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "yarn lint"
    ]
  },
  "dependencies": {
    "@micro-zoe/micro-app": "latest"
  },
  "devDependencies": {
    "@babel/core": "7.12.3",
    "@commitlint/cli": "~11.0.0",
    "@commitlint/config-conventional": "~11.0.0",
    "commitizen": "^4.0.3",
    "cz-customizable": "6.2.0",
    "husky": "~4.3.6",
    "lint-staged": "~10.5.3",
    "npm-run-all": "~4.1.5",
    "prettier": "^2.7.1",
    "react": "~17.0.2",
    "typescript": "~4.1.3"
  }
}
