{
  "name": "platform-frontend",
  "version": "0.0.1",
  "description": "雷数云平台",
  "author": "rxs-michael",
  "private": false,
  "main": "lib/index.min.js",
  "module": "lib/index.esm.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "bootstrap": "yarn && npm-run-all --serial install:*",
    "start": "npm run main-react",
    "build:watch": "cross-env NODE_ENV='development' rollup -c -w",
    "build": "cross-env NODE_ENV='production' rollup -c && npm run createtype && npm run afterbuild && npm run install:main-react && npm run build:main-react",
    "install:main-react": "cd main_apps/main-react && yarn",
    "build:main-react": "cd main_apps/main-react && yarn build",
    "main-react": "cd main_apps/main-react && yarn start",
    "lint": "prettier --check main_apps/**/*.ts main_apps/**/*.tsx",
    "lint:fix": "prettier --check main_apps/**/*.ts main_apps/main-react/src/utils/*.js scripts/**/*.js src/**/*.ts main_apps/**/*.tsx --write",
    "createtype": "node scripts/create_type.js",
    "afterbuild": "node scripts/after_build.js",
    "test:server": "node scripts/test_server.js --start",
    "prepublishOnly": "yarn lint && yarn test && yarn build",
    "commit": "git-cz"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "repository": {
    "type": "git",
    "url": "git@code.aliyun.com:bisheng/platform-frontend.git"
  },
  "files": [
    "es",
    "lib",
    "polyfill",
    "plugins",
    "typings"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/micro-zoe/micro-app/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:fix && lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "git add ."
    ]
  },
  "dependencies": {
    "@micro-zoe/micro-app": "latest"
  },
  "devDependencies": {
    "@babel/core": "7.12.3",
    "@commitlint/cli": "~11.0.0",
    "@commitlint/config-conventional": "~11.0.0",
    "@rollup/plugin-babel": "~5.2.2",
    "@rollup/plugin-node-resolve": "~11.0.1",
    "@rollup/plugin-replace": "~2.4.1",
    "@rollup/plugin-typescript": "~8.1.0",
    "@td-design/pont-engine": "^1.0.3",
    "commitizen": "^4.0.3",
    "cross-env": "~7.0.3",
    "cz-customizable": "6.2.0",
    "dts-bundle": "~0.7.3",
    "gzip-size": "~6.0.0",
    "husky": "~4.3.6",
    "lint-staged": "~10.5.3",
    "npm-run-all": "~4.1.5",
    "pont-engine": "1.0.6",
    "prettier": "^2.7.1",
    "pretty-bytes": "~5.5.0",
    "react": "~17.0.2",
    "rollup": "~2.35.1",
    "rollup-plugin-terser": "~7.0.2",
    "typescript": "~4.1.3"
  }
}
